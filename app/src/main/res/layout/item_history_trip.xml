<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="@dimen/size_10dp"
    app:cardCornerRadius="@dimen/size_10dp"
    tools:ignore="MissingConstraints">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_gradient_cateory"
        android:paddingRight="@dimen/size_10dp"
        android:paddingTop="@dimen/size_10dp"
        android:paddingBottom="@dimen/size_10dp">
        <android.support.constraint.Guideline
            android:id="@+id/guideline03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3"/>
        <android.support.constraint.Guideline
            android:id="@+id/guideline01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1"/>

        <android.support.constraint.Guideline
            android:id="@+id/guideline04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3" />
        <!--Content area-->
        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@+id/item_menu"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_vertical"
            android:textStyle="italic"
            android:textSize="15sp"
            android:text="DD/YY/YYYY"/>
        <TextView
            android:id="@+id/txtTimeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/guideline03"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guideline04"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="35 phút"/>
        <TextView
            android:id="@+id/txtDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guideline04"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/guideline03"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="50 km"/>
        <TextView
            android:id="@+id/txtPositionStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/guideline04"
            android:layout_marginTop="@dimen/size_5dp"
            app:layout_constraintLeft_toLeftOf="@id/guideline01"
            android:text="Hồ Tùng Mậu, Mai Dịch, Hà Nội"/>
        <TextView
            android:id="@+id/txtPositionEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/guideline01"
            android:text="Giải phóng, Quận 3, Hồ Chí Minh"/>
        <TextView
            android:id="@+id/txtTimeStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/txtPositionStart"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="#ecf0f1"
            android:text="03:15AM"/>
        <TextView
            android:id="@+id/txtTimeEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/txtPositionEnd"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="#ecf0f1"
            android:text="05:17PM"/>
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/colorLine"
            app:layout_constraintTop_toBottomOf="@id/ic_circle_pin"
            app:layout_constraintBottom_toTopOf="@id/txtPositionEnd"
            app:layout_constraintLeft_toLeftOf="@+id/ic_circle_pin"
            app:layout_constraintRight_toRightOf="@+id/ic_circle_pin"/>
        <ImageView
            android:id="@+id/ic_circle_pin"
            android:layout_width="@dimen/size_13dp"
            android:layout_height="@dimen/size_13dp"
            android:src="@drawable/ic_circle_pin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/guideline01"
            app:layout_constraintTop_toTopOf="@id/txtPositionStart"
            app:layout_constraintBottom_toBottomOf="@id/txtPositionStart"/>
        <ImageView
            android:id="@+id/ic_location_pin"
            android:layout_width="@dimen/size_20dp"
            android:layout_height="@dimen/size_20dp"
            android:src="@drawable/ic_location_pin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/guideline01"
            app:layout_constraintBottom_toBottomOf="@id/txtPositionEnd"/>
        <ImageView
            android:id="@+id/item_menu"
            android:layout_width="@dimen/size_20dp"
            android:layout_height="@dimen/size_20dp"
            android:src="@drawable/ic_menu"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>